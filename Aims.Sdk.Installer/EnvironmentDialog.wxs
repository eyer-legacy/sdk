<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
  <Fragment>
    <UI>
      <Dialog Id="EnvironmentDialog" Width="370" Height="270" Title="[ProductName] Setup">
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="Next">
          <Condition Action="disable"><![CDATA[(AIMS_ENVIRONMENT = "")]]></Condition>
          <Condition Action="enable"><![CDATA[(AIMS_ENVIRONMENT <> "")]]></Condition>
        </Control>
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="Back" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="Cancel">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>

        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="{\WixUI_Font_Title}Environment selection" />
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.InstallDirDlgBannerBitmap)" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

        <Control Id="AimsEnvironmentLabel" Type="Text" X="20" Y="60" Width="100" Height="13" NoPrefix="yes" Text="Environment:" />
        <Control Id="AimsEnvironment" Type="ListBox" Sorted="no" Indirect="no" Property="AIMS_ENVIRONMENT" X="20" Y="75" Width="300" Height="150">
          <ListBox Property="AIMS_ENVIRONMENT" />
        </Control>
      </Dialog>
    </UI>
  </Fragment>
</Wix>